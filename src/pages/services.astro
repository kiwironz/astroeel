    border-bottom: 1px solid #f0f0f0;
  }
  
  .service-card li:before {
    content: "âœ“";
    color: var(--accent);
    font-weight: bold;
    margin-right: 0.5rem;
  }
  
  .process-section {
    padding: 4rem 0;
  }
  
