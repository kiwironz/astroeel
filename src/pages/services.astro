    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }
  
  .services-hero {
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    padding: 4rem 0;
    text-align: center;
  }
  
